<header>
  <body>
    <p id="notice"></p>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>show</td>
          <td>edit</td>
          <td>destroy</td>
          <% end %>
      </tbody>
    </table>
    <h2>New Book</h2>
    <form class="new_book" id="new_book" action="/books" accept-charset="UTF-8" method="post">
    <div class="field">
    <%= form_with model: @book, url:'/books', local:true do |f| %>
    <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
    </div>
    <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
    </div>
    <div class="actions">
    <%= f.submit 'Create Book' %>
    </div>
    <% end %>
    </div>
    </form>
  </body>
</header>